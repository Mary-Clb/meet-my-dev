{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-3">

	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1>{{ user.username }}'s Profile</h1>
				<p>{{ user.presentation }}</p>
				<ul>
                    <li>{{ user.name }}
                        {{ user.firstname ?? '' }}
                    </li>
					<li>
						<strong>Email:</strong>
						{{ user.mail }}</li>
					<li>
						<strong>Telephone:</strong>
						{{ user.telephone }}
					</li>
				</ul>
			</div>
			{% if 'ROLE_COMPANY' in user.roles %}

				<div class="col-md-6">
					<h2>Company Info</h2>
							<strong>Location:</strong>
							{{ user.location }}
						<p>
							<strong>Activities:</strong>
						</p>
						<ul>
							{% for activity in user.activities %}
								<li>{{ activity.label }}</li>
							{% endfor %}
						</ul>
				</div>
			{% endif %}
			{% if 'ROLE_DEV' in user.roles %}
				<div class="col-md-6">
					<h2>Developer Info</h2>
							<strong>Experience:</strong>
							{{ user.experience }}
							years</p>
						<p>
							<strong>Specialities:</strong>
						</p>
						<ul>
							{% for speciality in user.specialities %}
								<li>{{ speciality.label }}</li>
							{% endfor %}
						</ul>
				</div>
			{% endif %}
		</div>
	</div>
</div>
{% endblock %}

